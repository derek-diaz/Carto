{
  "name": "carto",
  "version": "0.1.0",
  "private": true,
  "description": "Carto is a desktop app for inspecting Zenoh traffic.",
  "author": "Derek Diaz <derek.diaz@proton.me>",
  "main": "out/main/main.js",
  "scripts": {
    "dev": "electron-vite dev",
    "build": "electron-vite build",
    "dist": "npm run build && electron-builder",
    "dist:linux": "npm run build && electron-builder --linux",
    "dist:mac": "npm run build && electron-builder --mac",
    "dist:win": "npm run build && electron-builder --win",
    "preview": "electron-vite preview",
    "lint": "eslint . --ext .ts,.tsx",
    "format": "prettier --write .",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@eclipse-zenoh/zenoh-ts": "latest",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-window": "^1.8.9",
    "react-virtualized-auto-sizer": "^1.0.20"
  },
  "devDependencies": {
    "@types/node": "^20.14.10",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "@vitejs/plugin-react": "^4.3.0",
    "electron": "^39.3.0",
    "electron-builder": "^24.13.3",
    "electron-vite": "^2.3.0",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react": "^7.35.0",
    "eslint-plugin-react-hooks": "^4.6.2",
    "prettier": "^3.3.2",
    "tsx": "^4.16.2",
    "typescript": "^5.5.4",
    "vitest": "^1.6.0"
  },
  "build": {
    "appId": "com.carto.app",
    "productName": "Carto",
    "files": [
      "out/**",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "src/shared/logo.png",
        "to": "logo.png"
      }
    ],
    "directories": {
      "buildResources": "build",
      "output": "release"
    },
    "asar": true,
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "maintainer": "Derek Diaz <derek.diaz@proton.me>",
      "category": "Utility",
      "icon": "build/icon.png"
    },
    "win": {
      "target": "nsis",
      "icon": "build/icon.png"
    },
    "mac": {
      "target": "dmg",
      "category": "public.app-category.developer-tools",
      "icon": "build/icon.png"
    },
    "publish": [
      {
        "provider": "github",
        "releaseType": "release"
      }
    ]
  }
}
